featuremodel "platform:/resource/org.openarchitectureware.demo.fm/org.openarchitectureware.demo.fm.xfm.xmi" ;
 
import 'components/lib.adsl'  

system demosys  feature f2  {

	system aodb   {
		using lib.types;
		
		struct Flight {
			origin : string;
			destination : string;
			date : Date;
		}
		
		interface IFlightInformationServices {
			rr flightInfo : request=( flightID : int,  somethingElse: int  ) reply=( flight: Flight);
			oneway flightDelayed: ( flightID: int, delay: int );
		}
		
		persistencecomponent AptDB {
		}
		
		uicomponent AptGui {}
		
		blcomponent DelayCalculator {
			provides toMany fis: IFlightInformationServices;
			config {
				instancedef p1: text
				deployment p2: boolean
				startup p3: numeric
			}
		}
	} 


}